<link rel="stylesheet" href="~/Css/login.css" />
<link rel="stylesheet" href="~/Css/home.css" />

@model LoginVM
<!-- Login start -->
<div class="login-container d-flex center">
	<div class="bg-light-gray d-flex f-dir-column">
		<div class="col-md-6 col-md-offset-3 text-center">
			<div class="login">
				<div class="blue protected-form-heading">
					<div class="login-text">
						<h2 class="blue center">Login</h2>
						<span class="gray">Please login using account detail bellow.</span>
					</div>
					<div class="login-form">
						<form  method="post">
							<div class="text text-danger" style="color:red" asp-validation-summary="ModelOnly"></div>
							<div class="form-outline flex-fill mb-0">
								<input type="text" placeholder="UserName" asp-for="UserName" class="form-control" />
								<span class="text text-danger" asp-validation-for="UserName"></span>
							</div>
							<div class="form-outline flex-fill mb-0">
								<input type="password" placeholder="Password" asp-for="Password" class="form-control" />
								<span class="text text-danger" asp-validation-for="Password"></span>
							</div>
							<div class="button-box">
								<div class="login-toggle-btn">
									<input type="checkbox"  id="remember">
									<label style="color:cornflowerblue" for="remember">Remember me</label>
									<a asp-action="ForgetPassword" style="color:red" asp-controller="account">Forgot Password?</a>
								</div>
								<button type="submit" class="default-btn">Login</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>