<link rel="stylesheet" href="~/Css/login.css" />
<link rel="stylesheet" href="~/Css/home.css" />
  @model RegisterVM    
<!-- Login start -->
<div class="login-container d-flex center">
    <div class="bg-light-gray d-flex f-dir-column">
        <div class="col-md-6 col-md-offset-3 text-center">
            <div class="login">
                <div class="blue protected-form-heading">
                    <div class="login-text">
                        <h2 class="blue center">Sign Up</h2>
                        <span class="gray">Please Sign up the Pages.</span>
                    </div>
                    <div class="login-form">
                        <form  method="post">
                            <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    <input type="text" placeholder="Name" asp-for="Name" class="form-control" />
                                    <span class="text text-danger" asp-validation-for="Name"></span>
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    <input type="text" placeholder="Surname" asp-for="Surname" class="form-control" />
                                    <span class="text text-danger" asp-validation-for="Surname"></span>
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    <input type="email" placeholder="Email" asp-for="Email" class="form-control" />
                                    <span class="text text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    <input placeholder="UserName" asp-for="UserName" class="form-control" />
                                    <span class="text text-danger" asp-validation-for="UserName"></span>
                                </div>
                            </div>
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    <input type="password" placeholder="Password" asp-for="Password" class="form-control" />
                                    <span class="text text-danger" asp-validation-for="Password"></span>
                                </div>
                            </div>    
                            <div class="d-flex flex-row align-items-center mb-4">
                                <div class="form-outline flex-fill mb-0">
                                    <input type="password" placeholder="Confirm Password" asp-for="ConfirmPassword" class="form-control" />
                                    <span class="text text-danger" asp-validation-for="ConfirmPassword"></span>
                                </div>
                            </div>
                            <div class="button-box">
                                <div class="login-toggle-btn">
                                    <input type="checkbox" id="remember">
                                    <label class="gray" for="remember">Remember me</label>
                                    <a href="#">Forgot Password?</a>
                                </div>
                                <button type="submit" class="default-btn">Sign Up</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end --> 