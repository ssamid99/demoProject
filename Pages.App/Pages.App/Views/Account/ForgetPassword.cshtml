<link rel="stylesheet" href="~/Css/home.css" />

@using Pages.App.ViewModels;
@model ResetPasswordVM
<!-- Login start -->
<div class="login-container d-flex center">
	<div class="bg-light-gray d-flex f-dir-column">
		<div class="col-md-6 col-md-offset-3 text-center">
			<div class="login">
				<div class="blue protected-form-heading">
					<div class="login-text">
						<h2 class="blue center">Forget Password?</h2>
						<span class="gray">Please login using account detail bellow.</span>
					</div>
					<div class="login-form">
						<form method="post">
							<div class="d-flex flex-row align-items-center mb-4">
								<div class="form-outline flex-fill mb-0">
									<input required type="email" placeholder="Email" name="mail" class="form-control" />
								</div>
							</div>
							<div class="text text-danger" asp-validation-summary="ModelOnly"></div>
							<div class="button-box">
								<div class="login-toggle-btn">
								</div>
								<button type="submit" class=``"default-btn">Reset Password</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>