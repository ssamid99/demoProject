@model Blog
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input type="text" class="form-control" asp-for="Title">
            <span class="text text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input type="text" class="form-control" asp-for="Description">
            <span class="text text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="FormFile"></label>
            <input accept="image/*" type="file" class="form-control" asp-for="FormFile">
            <span class="text text-danger" asp-validation-for="FormFile"></span>
        </div>
        @Html.AntiForgeryToken()
        <button type="submit">Create</button>
    </form>
</div>